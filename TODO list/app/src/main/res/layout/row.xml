<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6pt"
            android:paddingBottom="6pt"
            android:showDividers="end">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1pt"
                android:layout_weight="0.01"
                android:buttonTint="@color/purpur"
                android:textAlignment="textStart"
                android:textColorHighlight="@color/purpur"
                android:textColorLink="@color/purpur"
                android:textSize="12sp"
                app:checkedState="unchecked" />

            <TextView
                android:id="@+id/taskN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/average_sans"
                android:paddingBottom="3pt"
                android:text="Name"
                android:textColor="@color/purpur"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/taskT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/average_sans"
                android:paddingEnd="8pt"
                android:paddingBottom="3pt"
                android:text="12:00"
                android:textAlignment="textEnd"
                android:textColor="@color/purpur"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.01"
            android:alpha="0.5"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

</androidx.cardview.widget.CardView>